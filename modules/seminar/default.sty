\NewDocumentCommand{\formatProblemCategories}{O{} O{}}{%
    \ifstrequal{#1}{}{}{%
        \ifstrequal{#2}{}{%
            kategória {\large\textbf{#1}}%
        }{%
            kategórie {\large\textbf{#1}} a {\large\textbf{#2}}%
        }%
    }%
}

\NewDocumentCommand{\formatPointsWord}{m}{%
    \switch[\number#1=]%
        \case{1}bod%
        \case{2}body%
        \case{3}body%
        \case{4}body%
