    \fancyhead[LO,RE]{}
    \fancyhead[LE,RO]{}
    \fancyfoot[LO,RE]{\href{mailto:(* seminar.email *)}{\texttt{(* seminar.email *)}}}
    \fancyfoot[C]{}
    \fancyfoot[LE,RO]{\URL{(* seminar.URL *)}}
    \titleformat{\section}[hang]{\centering\Huge}{}{0pt}{}
    \titleformat{\subsection}[hang]{\bfseries\large}{}{0pt}{}[]
    \titleformat{\subsubsection}[hang]{\bfseries}{}{0pt}{}[]
    \titlespacing{\section}{0pt}{8pt}{8pt}
    \titlespacing{\subsection}{0pt}{8pt}{0pt}
    \titlespacing{\subsubsection}{0pt}{8pt}{0pt}
    \renewcommand{\headrulewidth}{0pt}
