\RenewDocumentCommand{\getTaskCategories}{m}{
    \switch[\number#1=]
        \case{1}$\kappa \leq 1$\qquad\formatTaskCategories[$\boldsymbol{\alpha}$]%
        \case{2}$\kappa \leq 2$\qquad\formatTaskCategories[$\boldsymbol{\alpha}$]%
        \case{3}$\kappa \leq 3$\qquad\formatTaskCategories[$\boldsymbol{\alpha}$]%
        \case{4}$\kappa \leq 4$\qquad\formatTaskCategories[$\boldsymbol{\alpha}$][$\boldsymbol{\beta}$]%
        \case{5}$\kappa \leq 7$\qquad\formatTaskCategories[$\boldsymbol{\alpha}$][$\boldsymbol{\beta}$]%
        \case{6}\formatTaskCategories[$\boldsymbol{\alpha}$][$\boldsymbol{\beta}$]%
        \case{7}\formatTaskCategories[$\boldsymbol{\alpha}$][$\boldsymbol{\beta}$]%
        \case{8}\formatTaskCategories[$\boldsymbol{\beta}$]%
        \case{9}\formatTaskCategories[$\boldsymbol{\beta}$]%
        \case{10}\formatTaskCategories[$\mathbf{\boldsymbol{\beta}}$]%
        \otherwise\formatTaskCategories[\errorMessage{<KMS> task number cannot be "#1"! Must be between 1 and \seminarTaskCount.}]%
    \endswitch%
}
