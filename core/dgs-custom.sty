% package titlesec -- formatting of section headers
%\titleformat{\subsection}[runin / hang]{format whole}{label}{separation}{before}[after]
\NewDocumentCommand{\loadRegularStyle}{}{	
	\pagestyle{main}
	\titleformat{\section}[hang]{\centering\LARGE}{}{0pt}{}
	\titleformat{\subsection}[hang]{\bfseries\large}{}{0pt}{}[]
	\titleformat{\subsubsection}[hang]{\bfseries}{}{0pt}{}[]
	\titlespacing{\section}{0pt}{8pt}{8pt}
	\titlespacing{\subsection}{0pt}{8pt}{0pt}
	\titlespacing{\subsubsection}{0pt}{8pt}{0pt}
}

\NewDocumentCommand{\loadRulesStyle}{}{
    \loadRegularStyle
}

\NewDocumentCommand{\loadProblemsStyle}{}{
	\pagestyle{problems}
	\titleformat{\subsection}[hang]{\large}{\bfseries\currentRound.\arabic{problem}}{2pt}{}[]
}

\NewDocumentCommand{\loadSolutionsStyle}{}{
	\pagestyle{solutions}
	\titleformat{\subsection}[hang]{\large}{\bfseries\currentRound.\arabic{problem}}{2pt}{}[]
}

