\RenewDocumentCommand{\getProblemCategories}{m}{%
    \switch[\number#1=]%
        \case{1}\formatProblemCategories[B0]%
        \case{2}\formatProblemCategories[B]%
        \case{3}\formatProblemCategories[B]%
        \case{4}\formatProblemCategories[A][B]%
        \case{5}\formatProblemCategories[A][B]%
        \case{6}\formatProblemCategories[A]%
        \case{7}\formatProblemCategories[A]%
        \otherwise\formatProblemCategories[\errorMessage{<FKS> problem number cannot be "#1"! Must be between 1 and \seminarProblemCount.}]%
    \endswitch%
}

