\RenewDocumentCommand{\getTaskCategories}{m}{%
    \switch[\number#1=]%
        \case{1}\formatTaskCategories[Z]%
        \case{2}\formatTaskCategories[Z]%
        \case{3}\formatTaskCategories[Z]%
        \case{4}\formatTaskCategories[Z][O]%
        \case{5}\formatTaskCategories[Z][O]%
        \case{6}\formatTaskCategories[O]%
        \case{7}\formatTaskCategories[O]%
        \case{8}\formatTaskCategories[O]%
        \otherwise\formatTaskCategories[\errorMessage{<KSP> task number cannot be "#1"! Must be between 1 and \seminarTaskCount.}]%
    \endswitch%
}

\RenewDocumentCommand{\formatTaskPoints}{m m}{%
    {%
        \normalsize%
        \ifstrequal{#1}{}{%
            \ifstrequal{#2}{}{\errorMessage{KSP: must define points}}{{\large\textbf{#2 b}} za program}%
        }{%
            \ifstrequal{#2}{}{{\large\textbf{#1 b}} za popis}{{\large\textbf{#1 b}} za popis, {\large\textbf{#2 b}} za program}%
        }%
    }%
}
