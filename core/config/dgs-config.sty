\NewDocumentCommand{\currentPartGenitive}{}{%
    \switch[\number\currentPart=]%
        \case{1}zimnej%
        \case{2}letnej%
        \otherwise\errorMessage{<currentPartGenitive misconfigured: currentPart is "\currentPart">}%
    \endswitch%
}
\NewDocumentCommand{\currentPartNominative}{}{%
    \switch[\number\currentPart=]%
        \case{1}zimná%
        \case{2}letná/
        \otherwise\errorMessage{<currentPartNominative misconfigured: currentPart is "\currentPart">}%
    \endswitch
}
