\RenewDocumentCommand{\getTaskCategories}{m}{%
    \switch[\number#1=]%
        \case{1}\formatTaskCategories[B0]%
        \case{2}\formatTaskCategories[B]%
        \case{3}\formatTaskCategories[B]%
        \case{4}\formatTaskCategories[A][B]%
        \case{5}\formatTaskCategories[A][B]%
        \case{6}\formatTaskCategories[A]%
        \case{7}\formatTaskCategories[A]%
        \otherwise\formatTaskCategories[\errorMessage{<FKS> task number cannot be "#1"! Must be between 1 and \seminarTaskCount.}]%
    \endswitch%
}
